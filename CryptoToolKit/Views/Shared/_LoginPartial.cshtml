@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav ml-auto my-lg-0">
            <li class="nav-item">
                @*<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>*@
                <a class="nav-link dropdown-toggle text-muted" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="False"><i class="fas fa-user"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <ul class="dropdown-user">
                        <li><a href="#"><i class="far fa-address-card"></i> Profile</a></li>
                        <li><a href="#"><i class="fas fa-user-cog"></i></a></li>
                        <li role="separator" class="dropdown-divider"></li>
                        <li>
                            <button type="submit" class="btn btn-link nav-link"><i class="fas fa-sign-out-alt"></i>Logout</button>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a></li>
    </ul>
}