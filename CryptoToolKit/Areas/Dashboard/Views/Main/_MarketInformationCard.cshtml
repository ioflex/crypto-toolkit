<div class="card market-info-card">
    <div class="card-body">
        <div class="preloader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
            </svg>
        </div>
        <h4 class="bg-primary text-white ml-0 mt-0 text-center">Market info</h4>
        <div class="row p-2">
            <div class="col text-center">
                <select class="current-crypto-symbol"></select>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-sm-5 text-left">
                <h4 class="current-crypto-price"></h4>
            </div>
            <div class="col-sm-2 text-center">
                <h4 class="movement-indicator"><></h4>
            </div>
            <div class="col-sm-5 text-right">
                <h4 class="current-24hr-change"></h4>
            </div>
        </div>
        <div class="row p-2">
            <div class="col text-center">
                <button id="refresh-market-info" class="btn btn-primary">
                    Refresh
                </button>
            </div>
        </div>
        <div class="row pt-1">
            <div class="col-sm-12 text-center">
                <h6 class="last-updated"></h6>
            </div>
        </div>
    </div>
</div>
